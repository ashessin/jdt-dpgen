root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.conf]
indent_size = 2
indent_style = space
tab_width = 2

[*.scala]
indent_style = space
tab_width = 2

[{*.jhm,*.xjb,*.rng,*.wsdl,*.wsdd,*.fxml,*.plan,*.bpmn,*.pom,*.xslt,*.jrxml,*.ant,*.xul,*.xsl,*.xsd,*.tld,*.jnlp,*.wadl,*.xml}]
indent_style = space

[{*.zsh,*.bash,*.sh}]
indent_size = 2
indent_style = space
tab_width = 2

[{.eslintrc,bowerrc,.babelrc,jest.config,.stylelintrc,*.jsb3,*.jsb2,*.json}]
indent_size = 2
indent_style = space
